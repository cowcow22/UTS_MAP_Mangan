<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">


    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your goal?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="168dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please choose one, don't worry you can still edit your goal in this app"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Weight loss button -->
    <Button
        android:id="@+id/weightLossButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Weight loss"
        android:background="@drawable/green_button_background"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/subtitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Maintain weight button -->
    <Button
        android:id="@+id/maintainWeightButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Maintain current weight"
        android:background="@drawable/green_button_background"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/weightLossButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Weight gain button -->
    <Button
        android:id="@+id/weightGainButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Weight gain"
        android:background="@drawable/green_button_background"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/maintainWeightButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Go Next button -->
    <Button
        android:id="@+id/btn_go_next"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#042628"
        android:fontFamily="@font/poppins_bold"
        android:text="Go Next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="88dp"/>

    <!-- Sign In text -->
    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got an account? Sign In"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
