<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".GeneralSettingsActivity">

    <LinearLayout
        android:id="@+id/general_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="start|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="16dp"
                android:textAllCaps="false"
                app:cornerRadius="0dp"
                app:icon="@drawable/back_arrow_ic"
                app:iconGravity="end"
                app:iconTint="#000000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="General Settings"
                android:textAlignment="center"
                android:textColor="#0A2533"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_management_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#FFFFFF"
            android:elevation="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="19dp"
                android:paddingTop="12dp"
                android:paddingEnd="19dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/account_management_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Account"
                    android:textAlignment="viewStart"
                    android:textColor="#0A2533"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/account_management_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#005B4040"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:paddingBottom="0dp"
                    android:text="Account Management"
                    android:textAlignment="viewStart"
                    android:textColor="#0A2533"
                    android:textStyle="bold"
                    app:icon="@drawable/my_profile_ic"
                    app:iconGravity="start"
                    app:iconPadding="16dp"
                    app:iconSize="40dp"
                    app:iconTint="#00E4B34C"
                    app:iconTintMode="screen" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/preferences_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#FFFFFF"
            android:elevation="4dp"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/preferences_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="8dp"
                android:text="Preferences"
                android:textColor="#0A2533"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:paddingStart="3dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/region_ic" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:paddingStart="3dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/theme_ic" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:paddingStart="3dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/language_ic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/region_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Region"
                        android:textAlignment="viewStart"
                        android:textColor="#0A2533"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="right"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="#D6D6D6" />

                    <TextView
                        android:id="@+id/theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Theme"
                        android:textAlignment="viewStart"
                        android:textColor="#0A2533"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="right"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="#D6D6D6" />

                    <TextView
                        android:id="@+id/language_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="Language Options"
                        android:textAlignment="viewStart"
                        android:textColor="#0A2533"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginStart="9dp"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:paddingStart="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/region_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/poppins_light"
                            android:singleLine="true"
                            android:text="ID"
                            android:textAlignment="textEnd"
                            android:textColor="#427AA1"
                            android:textSize="15dp"
                            tools:layout_editor_absoluteY="276dp" />

                        <ImageView
                            android:id="@+id/pencil_1"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pencil_ic" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/theme_switch"
                        android:layout_width="45sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_input3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/poppins_light"
                            android:singleLine="true"
                            android:text="EN"
                            android:textAlignment="textEnd"
                            android:textColor="#427AA1"
                            android:textSize="15dp"
                            tools:layout_editor_absoluteY="276dp" />

                        <ImageView
                            android:id="@+id/pencil_2"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pencil_ic" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/preferences_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#FFFFFF"
            android:elevation="4dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="9dp"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="0dp">

                <TextView
                    android:id="@+id/dairy_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="8dp"
                    android:text="Diary"
                    android:textColor="#0A2533"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/energy_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginRight="0dp"
                        android:layout_weight="0.75"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Energy Unit"
                        android:textAlignment="viewStart"
                        android:textColor="#0A2533"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/energy_unit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text="Calories"
                        android:textAlignment="viewStart"
                        android:textColor="#427AA1"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteY="276dp" />

                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="0dp"
                    android:background="#D6D6D6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/weight_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginRight="0dp"
                        android:layout_weight="0.75"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Weight Unit"
                        android:textAlignment="viewStart"
                        android:textColor="#0A2533"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/weight_unit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text="Kilograms"
                        android:textAlignment="viewStart"
                        android:textColor="#427AA1"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteY="276dp" />

                </LinearLayout>

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="0dp"
                    android:background="#D6D6D6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/rdi_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginRight="0dp"
                        android:layout_weight="0.75"
                        android:fontFamily="@font/poppins_regular"
                        android:text="RDI"
                        android:textAlignment="viewStart"
                        android:textColor="#0A2533"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rdi_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text="2428 calories"
                        android:textAlignment="viewStart"
                        android:textColor="#427AA1"
                        android:textSize="15dp"
                        tools:layout_editor_absoluteY="276dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>