<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".FeedbackSettingsActivity">

    <LinearLayout
        android:id="@+id/feedback_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="start|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="16dp"
                android:textAllCaps="false"
                app:cornerRadius="0dp"
                app:icon="@drawable/back_arrow_ic"
                app:iconGravity="end"
                app:iconTint="#000000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="Feedback"
                android:textAlignment="center"
                android:textColor="#0A2533"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:fontFamily="@font/poppins_bold"
            android:text="Tell us your thoughts to help us imporve"
            android:textColor="#0A2533"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/feedback_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#FFFFFF"
            android:elevation="0dp"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/need_more_language_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.5"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:text="Need More Language"
                    android:textAlignment="center"
                    android:textColor="#0A2533"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:translationZ="4dp"
                    app:iconGravity="start"
                    app:iconSize="40dp"
                    app:iconTint="#00E4B34C"
                    app:iconTintMode="screen" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bugs_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:text="Bugs"
                    android:textAlignment="center"
                    android:textColor="#0A2533"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:translationZ="4dp"
                    app:iconGravity="start"
                    app:iconSize="40dp"
                    app:iconTint="#00E4B34C"
                    app:iconTintMode="screen" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/suggest_new_feature_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.5"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:text="Suggest New Features"
                    android:textAlignment="center"
                    android:textColor="#0A2533"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:translationZ="4dp"
                    app:iconGravity="start"
                    app:iconSize="40dp"
                    app:iconTint="#00E4B34C"
                    app:iconTintMode="screen" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/others_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:text="Others"
                    android:textAlignment="center"
                    android:textColor="#0A2533"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:translationZ="4dp"
                    app:iconGravity="start"
                    app:iconSize="40dp"
                    app:iconTint="#00E4B34C"
                    app:iconTintMode="screen" />
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            tools:context=".FeedbackSettingsActivity">

            <LinearLayout
                android:id="@+id/feedback_setting_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="120dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#FFFFFF"
                android:elevation="4dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Other UI elements -->

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top|start"
                        android:hint="Please tell us more details so that we can better your experience"
                        android:inputType="textMultiLine"
                        android:outlineProvider="none"
                        android:padding="16dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>