<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is hovered -->
    <item android:state_hovered="true" android:drawable="@drawable/after_hover_dark_button" />

    <!-- State when button is pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/after_hover_dark_button" />

    <!-- Default state -->
    <item android:drawable="@drawable/dark_button_background" />
</selector>
