<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the progress bar -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#FFC107" /> <!-- Background color -->
        </shape>
    </item>

    <!-- Secondary progress (if applicable) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#4CAF50" /> <!-- Secondary progress color -->
            </shape>
        </clip>
    </item>

    <!-- Primary progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#F44336" /> <!-- Primary progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
